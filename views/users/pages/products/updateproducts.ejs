<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="chrome://branding/content/icon32.png" type="image/x-icon">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/root.css">
  <link rel="stylesheet" href="/css/swiper.css">
  <link rel="stylesheet" href="/css/layout.css">
  <link rel="stylesheet" href="/css/generalforms.css">
  <link rel="stylesheet" href="/css/subnav.css">
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
  <title>GameStore</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
</head>

<body>
  <div class="container">
    <header class="dtc">
      <%- include("../../../users/partials/inHeader.ejs"); -%>
    </header>

    <div class="subnav">
      <ul>
        <li>
          <a href="/marketplaces/products">Adicionados por você</a>
        </li>
      </ul>
    </div>

    <div class="formBlock">
      <h1>Editar produto</h1>
      <form method="POST" action="/marketplaces/products/update">
        <div class="dv">
          <input style="display: none;" type="text" name="idprod" value="<%= data.product.id %>" /><br />
          <div>
            <label>Título do jogo</label><br />
            <input type="text" name="name" value="<%= data.product.product %>" /><br />
          </div>

          <div>
            <label>Slug</label><br />
            <input type="text" name="slug" value="<%= data.product.slug %>" /><br />
          </div>

          <div>
            <label>Preço</label><br />
            <input type="text" name="price" value="<%= data.product.price %>" /><br />
          </div>

          <div>
            <label>Lançamento</label><br />
            <input type="date" name="release_date" /><br />
          </div>

          <div>
            <label>Tipo</label><br />
            <select name="typeindex">
              <option value="1">Bloco Hero</option>
              <option value="2">Bloco Galeria</option>
              <option value="3">Bloco Opções</option>
            </select>
          </div>

          <div>
            <label>Categoria</label><br />
            <select name="category">
              <option value="1">Ação</option>
              <option value="2">Aventura</option>
              <option value="3">Ação-Aventura</option>
              <option value="4">Corrida</option>
              <option value="5">Aviação</option>
              <option value="6">Jogos de Tiro</option>
              <option value="7">RPG</option>
              <option value="8">Indie</option>
              <option value="9">Esporte</option>
              <option value="10">Simulador</option>
              <option value="11">Luta</option>
              <option value="12">Estratégia</option>
              <option value="13">Casual</option>
              <option value="14">Sobrevivência</option>
              <option value="15">Mundo aberto</option>
            </select>
          </div>

          <div>
            <label>Descrição</label><br />
            <textarea id="tinymce1" name="description" cols="30" rows="10"><%= data.product.description %></textarea>
            <br />
          </div>
        </div>

        <div class="dv">
          <div>
            <label>CPU (mímimo)</label><br />
            <input type="text" name="cpumin" value="<%= data.product.cpumin %>" /><br />
          </div>

          <div>
            <label>Placa de Vídeo (mínimo)</label><br />
            <input type="text" name="videocardmin" value="<%= data.product.vdcardmin %>" /><br />
          </div>

          <div>
            <label>Memória RAM (mímimo)</label><br />
            <input type="text" name="rammemorymin" value="<%= data.product.rammin %>" /><br />
          </div>

          <div>
            <label>Armazenamento (mímimo)</label><br />
            <input type="text" name="storagemin" value="<%= data.product.strmin %>" /><br />
          </div>
        </div>

        <div class="dv">
          <div>
            <label>CPU (recomendado)</label><br />
            <input type="text" name="cpurec" value="<%= data.product.cpurec %>" /><br />
          </div>

          <div>
            <label>Placa de Vídeo (recomendado)</label><br />
            <input type="text" name="videocardrec" value="<%= data.product.vdcardrec %>" /><br />
          </div>

          <div>
            <label>Memória RAM (recomendado)</label><br />
            <input type="text" name="rammemoryrec" value="<%= data.product.ramrec %>" /><br />
          </div>

          <div>
            <label>Armazenamento (recomendado)</label><br />
            <input type="text" name="storagerec" value="<%= data.product.strrec %>" /><br />
          </div>
        </div>

        <div>
          <h3>Mídias</h3><br />

          <div>
            <label>Logotipo do jogo</label><br />
            <input type="text" name="mediaurl1" value="<%= data.productImageInit[0].images %>" /><br />
          </div>

          <div>
            <label>Mídia demo</label><br />
            <input type="text" name="mediaurl2" value="<%= data.productImageInit[1].images %>" /><br />
          </div>

          <div>
            <label>Mídias destaque</label><br />
            <input type="text" name="mediaurl3" value="<%= data.productImageInit[2].images %>" /><br />
            <input type="text" name="mediaurl4" value="<%= data.productImageInit[3].images %>" /><br />
            <input type="text" name="mediaurl5" value="<%= data.productImageInit[4].images %>" /><br />
          </div>

          <div>
            <label>Mídias descritivas</label><br />
            <input type="text" name="mediaurl6" value="<%= data.productImageInit[5].images %>" /><br />
            <input type="text" name="mediaurl7" value="<%= data.productImageInit[6].images %>" /><br />
            <input type="text" name="mediaurl8" value="<%= data.productImageInit[7].images %>" /><br />
            <input type="text" name="mediaurl9" value="<%= data.productImageInit[8].images %>" /><br />
          </div>
        </div>

        <input class="btnsub" type="submit" value="Enviar" />
      </form>
    </div>
  </div>

  <footer class="dtc">
    <%- include("../../../store/partials/inFooter.ejs"); -%>
  </footer>

  <div class="modal"></div>

  <script src="/tinymce/tinymce.min.js"></script>
  <script>
    tinymce.init({
      language: 'pt_BR',
      activeEditor: true,
      selector: '#tinymce1',
      convert_newlines_to_brs : true,
      nowrap: false,
      plugins: [
        'advlist',
        'autolink',
        'link',
        'image',
        'lists',
        'preview',
        'searchreplace',
        'wordcount',
        'fullscreen',
        'insertdatetime',
        'media',
        'save',
        'table',
        'emoticons',
      ]
    });
  </script>

  <script src="/js/app.js"></script>
  <script src="/js/responsive-menu.js"></script>
  <script src="/js/resize.js"></script>
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script src="/js/swiperpersonal.js"></script>
  <script src="/js/initcart.js"></script>
</body>

</html>