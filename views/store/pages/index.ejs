<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="chrome://branding/content/icon32.png" type="image/x-icon">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
  <link rel="stylesheet" href="css/reset.css">
  <link rel="stylesheet" href="css/root.css">
  <link rel="stylesheet" href="css/swiper.css">
  <link rel="stylesheet" href="css/layout.css">
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
  <title>GameStore</title>
</head>

<body>
  <div class="container">
    <header class="dtc">
      <% if(data["user"]===3){ %>
        <%- include("../../admin/partials/inHeader.ejs"); -%>
          <% } else if(data["user"]> 0){ %>
            <%- include("../../users/partials/inHeader.ejs"); -%>
              <% }else {%>
                <%- include("../partials/inHeader.ejs"); -%>
                  <%} %>
    </header>

    <div class="wrapper dtc">
      <section class="s-hero">
        <div class="swiper mySwiperHero">
          <div class="swiper-wrapper">

            <% if(data["hero"].length> 0){ %>
              <% for (let result of data["hero"]) { %>
                <div class="swiper-slide">
                  <a href="/game/<%= result.slug %>">
                    <picture class="c-image">
                      <source class="heroImgDesktop" srcset="<%= result.pathmedia_deskt %>" media="(min-width:1084px)">
                      <source class="heroImgTablet" srcset="<%= result.pathmedia_mobo2 %>" media="(min-width:768px)">
                      <source class="heroImgMobile" srcset="<%= result.pathmedia_mobo1 %>" media="(min-width:0)"><img
                        srcset="img/farcry1920.jpg" src="<%= result.pathmedia_deskt %>" alt="<%= result.alt %>">
                    </picture>
                    <div class="desc">
                      <h2>
                        <%= result.title %>
                      </h2>
                      <p>
                        <%= result.desc %>
                      </p>
                      <button>Adicionar ao carrinho</button>
                    </div>
                  </a>
                </div>
                <% } %>
                  <% }else {%>
                    <h1>Não achei nada</h1>
                    <% } %>
          </div>
          <div class="swiper-button-next"></div>
          <div class="swiper-button-prev"></div>
          <div class="swiper-pagination"></div>
        </div>
      </section>

      <div class="content">
        <div class="open_close_menu">
          Filtrar busca
          <span class="material-symbols-outlined">
            sort
          </span>
        </div>

        <%- include("../partials/Sidebar.ejs"); -%>

          <div class="sectionGroup">
            <section class="s-gallery">
              <main>
                <div class="inGallery">
                  <% if(data["gallery"].length> 0){ %>
                    <div class="swiper mySwiperGallery sw1">
                      <div class="swiper-wrapper">

                        <% for (let result of data["gallery"].slice(0,4)) { %>
                          <div class="swiper-slide">
                            <a href="/game/<%= result.gameslug %>">
                              <div class="main-image">
                                <img src="<%= result.gamemedia[1].gamemediapath %>" alt="">
                              </div>

                              <div class="info">
                                <img src="<%= result.gamemedia[0].gamemediapath %>" alt="">

                                <div class="desc">
                                  <p class="title">
                                    <%= result.gamename %>
                                  </p>
                                  <p class="type-release">
                                    <%= result.gamecat %>
                                  </p>
                                  <p class="price">R$ <%= result.gameprice.toFixed(2) %>
                                  </p>
                                </div>
                              </div>
                            </a>
                          </div>
                          <% } %>
                      </div>
                      <div class="swiper-button-next"></div>
                      <div class="swiper-button-prev"></div>
                      <div class="swiper-pagination"></div>
                    </div>

                    <div class="swiper mySwiperGallery sw2">
                      <div class="swiper-wrapper">
                        <% for (let result of data["gallery"].slice(4,8)) { %>
                          <div class="swiper-slide">
                            <a href="/game/<%= result.gameslug %>">
                              <div class="main-image">
                                <img src="<%= result.gamemedia[1].gamemediapath %>" alt="">
                              </div>

                              <div class="info">
                                <img src="<%= result.gamemedia[0].gamemediapath %>" alt="">

                                <div class="desc">
                                  <p class="title">
                                    <%= result.gamename %>
                                  </p>
                                  <p class="type-release">
                                    <%= result.gamecat %>
                                  </p>
                                  <p class="price">R$ <%= result.gameprice.toFixed(2) %>
                                  </p>
                                </div>
                              </div>
                            </a>
                          </div>
                          <% } %>
                      </div>
                      <div class="swiper-button-next"></div>
                      <div class="swiper-button-prev"></div>
                      <div class="swiper-pagination"></div>
                    </div>
                    <% }else {%>
                      <h1>Não achei nada</h1>
                      <% } %>
                </div>
              </main>
            </section>

            <section class="s-options">
              <h2>Opções incríveis</h2>

              <div class="menuMobo">
                <div class="swiper mySwiperMobo">
                  <div class="swiper-wrapper">
                    <div class="swiper-slide"><a href="#">Lançamentos</a></div>
                    <div class="swiper-slide"><a href="#">Ofertas</a></div>
                    <div class="swiper-slide"><a href="#">Gratutitos</a></div>
                    <div class="swiper-slide"><a href="#">Recomendados</a></div>
                  </div>
                  <!-- <div class="swiper-pagination"></div> -->
                </div>
              </div>

              <div class="inOptions">
                <div class="swiper mySwiperOptions">
                  <div class="swiper-wrapper">
                    
                    <div class="swiper-slide">
                      <% for (let result of data["options"].slice(0,4)) { %>
                        <a href="/game/<%= result.gameslug %>">
                          <div class="info">
                            <img src="<%= result.gamemedia[0].gamemediapath %>" alt="">

                            <div class="snipet">
                              <p class="title"><%= result.gamename %></p>
                              <p class="type-release"><%= result.gamecat %></p>
                              <p class="price">
                                <% if(result.gameprice <= 0){ %>
                                  Gratuito
                                  <% }else {%>
                                    R$ <%= result.gameprice.toFixed(2) %>
                                    <% } %>
                              </p>
                            </div>
                          </div>
                        </a>
                        <% } %>
                    </div>

                    <div class="swiper-slide">
                      <% for (let result of data["options"].slice(4,8)) { %>
                        <a href="/game/<%= result.gameslug %>">
                          <div class="info">
                            <img src="<%= result.gamemedia[0].gamemediapath %>" alt="">

                            <div class="snipet">
                              <p class="title"><%= result.gamename %></p>
                              <p class="type-release"><%= result.gamecat %></p>
                              <p class="price">
                                <% if(result.gameprice <= 0){ %>
                                  Gratuito
                                  <% }else {%>
                                    R$ <%= result.gameprice.toFixed(2) %>
                                    <% } %>
                              </p>
                            </div>
                          </div>
                        </a>
                        <% } %>
                    </div>


                    <div class="swiper-slide">
                      <% for (let result of data["options"].slice(8,12)) { %>
                        <a href="/game/<%= result.gameslug %>">
                          <div class="info">
                            <img src="<%= result.gamemedia[0].gamemediapath %>" alt="">

                            <div class="snipet">
                              <p class="title"><%= result.gamename %></p>
                              <p class="type-release"><%= result.gamecat %></p>
                              <p class="price">
                                <% if(result.gameprice <= 0){ %>
                                  Gratuito
                                  <% }else {%>
                                    R$ <%= result.gameprice.toFixed(2) %>
                                    <% } %>
                              </p>
                            </div>
                          </div>
                        </a>
                        <% } %>
                    </div>
                  </div>

                  <div class="swiper-pagination"></div>
                </div>
              </div>
            </section>

          </div>
      </div>
    </div>

  </div>


  <footer class="dtc">
    <%- include("../partials/inFooter.ejs"); -%>
  </footer>

  <div class="modal"></div>



  <script src="js/app.js"></script>
  <script src="js/responsive-menu.js"></script>
  <script src="js/sidebar.js"></script>
  <script src="js/resize.js"></script>
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script src="js/swiperpersonal.js"></script>
  <script src="/js/initcart.js"></script>
</body>

</html>